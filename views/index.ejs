<style media="screen">
  #movie-roulette {
    height: 400px;
    width: 400px;
    border-radius: 100%;
    background-image: url('/images/moviepostersss.jpg');
  }
  #movie {
    width: 400px;
    /*display: none;*/
  }
  #food-roulette {
    height: 400px;
    width: 400px;
    border-radius: 100%;
    background-image: url('/images/foodpostersss.jpg');
  }
  #food {
    width: 400px;
    /*display: none;*/
  }
  .spinning {
    animation-name: spin-animation;
    animation-duration: 1s;
    animation-iteration-count: infinite;
    -webkit-animation-timing-function: linear;
    /* Safari 4.0 - 8.0 */
    animation-timing-function: linear;
  }
  @keyframes spin-animation {
    0% {
      background-position: center 0px
    }
    100% {
      background-position: center -2400px
    }
  }
</style>

<div class="row">
  <div class="container">
    <div class="col-md-12 col-centered main text-center">
      <div class="col-md-5 col-md-offset-1 text-center dinner-div">
        <h2>Dinner</h2>
        <h3 class="restaurant-name"></h3>
        <div id="food-roulette">
          <img id="food" class="dinner-img" src="/images/question-mark.png" alt="question-mark">
          <!-- <img id="food" src="https://www.lakeridgewinery.com/img/shrimp.jpg"> -->
          <span id='faveDinner' class='glyphicon glyphicon-star unfavorited'></span>
        </div>

      </div>
      <div class="col-md-5 text-center movie-div">
        <h2>Movie</h2>
        <h3 class="movie-title"></h3>
        <div id="movie-roulette">
          <!-- <img id="movie" src="https://wh1k8zidop.inscname.net/big/524810.jpg?v=1462392691"> -->
          <img id="movie" class="movie-img" src="/images/question-mark.png" alt="question-mark">
          <span id='faveMovie' class='glyphicon glyphicon-star unfavorited'></span>
        </div>
      </div>

    </div>
    <div class="selection">
      <select class="foodSelect" name="">
        <option value="restaurant">Random</option>
        <% if(isLoggedIn) {%>
          <%for(i = 0; i < currentUser.cuisinePreferences.length; i +=1) {%>
              <option value="<%=currentUser.cuisinePreferences[i]%>"><%=currentUser.cuisinePreferences[i]%></option>
            <% }%>  
        <% } %>
      </select><br>
      <input type="text" placeholder="Zip Code" class="zipInput"></input><br>
      <button class="btn">Random Date</button>
    </div>
  </div>
</div>


